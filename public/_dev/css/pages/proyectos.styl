section.sf-container-proyectos
    background: $color-primary
    div.sf-container-flex-proyectos
        display: flex
        flex-direction: column
        margin: 40px 0
        div.sf-content-titles-proyectos 
            color: $color-white
            text-align: center
            margin : 0 0 25px 0
            div.sf-title-proyectos
                font-family: UbuntuMedium
                font-size: 44px 
                label
                    font-family: UbuntuBold
                +media-s()
                    font-size: 35px
            div.sf-subtitle-proyectos
                font-family: UbuntuMedium
                font-size: 26px 
                label
                    font-family: UbuntuLight
                +media-s()
                    font-size: 22px
        div.sf-container-pictures-proyectos
            display: flex
            justify-content: center
            +media-s()
                flex-direction: column
            div.sf-container-pictures-tiny
                display: flex
                flex-flow: row wrap
                justify-content: flex-start
                width: 100%;
                +media-s()
                    justify-content: flex-start
                div.sf-content-pictures-tiny
                    display: flex;
                    flex-direction: column
                    margin: 0 5% 8px 1%;
                    width: 150px;
                    +media-s()
                        width: 100px;   
                        margin: 0px 0 3% 2%
                    div.sf-picture-tiny
                        img 
                            width : 100%
                        img:hover 
                            outline: 4px solid $color-white
                        img:focus
                            outline: 4px solid $color-white
                    div.sf-title-picture-tiny
                        font-family: UbuntuBold
                        font-size: 14px 
                        color: $color-white
                        text-align: center
                        padding: 8px 0
                        +media-s()
                            font-size: 16px 
            div.sf-container-picture-big
                width 100%
                img
                    width: 100%
                    +media-s()
                        height : auto


section.sf-container-msj-proyectos
    background: $color-white
    margin: 20px 0
    div.sf-container-flex-msj-proyectos
        display: flex
        flex-direction: row
        justify-content: center
        +media-s()
            flex-direction: column
        div.sf-msj-proyectos
            font-family : UbuntuRegular
            text-align : center
            font-size: 22px
            color: $color-primary
            align-self: center
            +media-m()
                font-size: 22px
                align-self: center
            +media-s()
                font-size: 22px
            label 
                font-weight: bold
        div.sf-msj-button
            margin: 0 0 0 30px
            +media-m()
                margin: 10px 0 0 0
                align-self: center
            +media-s()
                text-align: center
                margin: 20px 0 0 0
