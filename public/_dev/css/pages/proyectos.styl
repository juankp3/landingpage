section.sf-container-msj-proyectos
    background: $color-white
    margin: 20px 0
    div.sf-container-flex-msj-proyectos
        display: flex
        flex-direction: row
        justify-content: center
        +media-s()
            flex-direction: column
        div.sf-msj-proyectos
            font-family : UbuntuRegular
            text-align : center
            font-size: 22px
            color: $color-primary
            align-self: center;
            +media-m()
                font-size: 22px
                align-self: center;
            +media-s()
                font-size: 22px
            label 
                font-weight: bold
        div.sf-msj-button
            margin: 0 0 0 30px;
            +media-m()
                margin: 10px 0 0 0
                align-self: center;
            +media-s()
                text-align: center
                margin: 20px 0 0 0
