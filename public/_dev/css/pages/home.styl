.content
    overflow: hidden
    max-width: 75rem
    margin: auto
    box-sizing: content-box
    padding: 0 .625rem
header
    padding-top: 10px
    padding-bottom: 10px
    .content
        display: flex
        justify-content: space-between
    .logo
        position: relative
        margin-left: 0
        transition: all 0.35s ease
        display: flex
        justify-content: left
        align-items: center
        +media-m()
            img 
                height: 50px;
        .cl-blue
            color: $color-segunday
            font-weight: bold
            font-size: 18px
            font-family: sans-serif;
    .cl-whatsapp
        position: relative
        margin-left: 0
        transition: all 0.35s ease
        display: flex
        justify-content: left
        align-items: center
        a.sf-btn.-whatsapp.-web span 
            display: block
            +media-m()
                display: none

section
    font-size: 16px
    

section.sf-title
    text-align: center
    font-size: 30px
    justify-content: center
    min-height: 110px
    color: $color-primary
    background: $color-gray-100
    align-items: center;
    display: flex;
    +media-m()
        display: block
        padding: 16px 16px
        font-size: 22px
        line-height: 30px
        min-height: auto

section.sf-room
    background-image url('../img/bg_header.png')
    height 530px 
    .content
        display: flex
    .sf-description  
        width: 66.6%
        h2
            color: $color-segunday
            font-size: 30px
            padding-top: 52px

    .sf-form
        background: #205D81
        width: 33%
        height 527px


footer
    section.sf-top-footer
        background: #205D81
        font-family : UbuntuRegular
        text-align : center
        font-size: 22px
        color: #fff
        padding: 27px 0
    section.sf-bottom-footer
        padding-left: 10px
        padding-right: 10px        

