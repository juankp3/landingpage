section.sf-room
    background-image url('../img/bg_header.png')
    background-repeat: no-repeat
    background-size: 100% 100%
    height: 530px;
    +media-s()
        height: auto
        background-image : none
    .sf-container-room
        display: flex
        flex-direction: row
        justify-content: space-between
        +media-s()
            flex-direction: column
        .sf-content-description
            width: 66.6%
            +media-l()
                width: 50%
            +media-s()
                width: 100%
                text-align: center
            h2.sf-room-title
                color: $color-blue 
                font-family: $font-family-ubuntu-regular
                font-size: 24px
                padding: 10px 0
                p
                    margin: 0
            p.sf-room-description
                font-family: $font-family-ubuntu-light
                font-size: 18px
                padding: 0 0 10px 0
        .sf-content-form
            width: 400px
            +media-l()
                width: 50%
            +media-s()
                width: 100%
            .sf-form
                // height 530px
                background: $color-secundary-light
                padding: 0px 0px 24px 0px;
                +media-s()
                    background: $color-tertiary
                form 
                    width: 100%
                    .form-top
                        width: 90%
                        margin: auto
                        .conent-text
                            width: 80%
                            margin: auto
                    .form-bottom
                        width: 90%
                        margin: auto
                    h4
                        font-family: 'UbuntuBold'
                        font-size: 20px
                        line-height: 22px
                        color: $color-white
                        padding-top: 40px
                        text-align: center
                        font-weight: bold
                        +media-s()
                            color: $color-gray-600
                        strong
                            color : $color-primary !important
                    p
                        font-family: 'UbuntuMedium';
                        font-weight: 500
                        font-size: 13px
                        line-height: 30px
                        text-align: center
                        color: $color-white
                        margin: 0px 0px 16px;
                        +media-s()
                            color: $color-gray-600
                    div.sf_btn
                        text-align: center
                        +media-s()
                            margin: 0 0 15px 0
                    +media-s()
                        height: 100%