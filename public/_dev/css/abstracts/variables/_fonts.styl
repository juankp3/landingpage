// Families!
$font-family-regular = "mullerregular"
$font-family-semibold = "mullersemibold"
$font-family-bold = "mullerbold"
$font-family-black = "mullerblack"
$font-family-awesome = "FontAwesome"
$font-family-mono = monospace

// Font sizes!
$font-size-xl = 1.25rem           // 20px
$font-size-l = 1.125rem           // 18px
$font-size-m = 16px               // Assumes the browser default, typically `16px`
$font-size-s = .875rem            // 14px
$font-size-xs = .75rem            // 12px