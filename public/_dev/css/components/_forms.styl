.select {
    position: relative;
    width: 100%;
}
.select>select 
    border-radius: 4px;
    width: 100%;
    border: 1px solid #6a6a6a;
    height: 36px;
    background-color: #fff;
    color: #6a6a6a
    padding: 0 10px;
    font-size: 14px;
    cursor: pointer;
    outline: none;
    outline: 0;
    -webkit-appearance: none;
    -moz-appearance: none;


.select>select:after {
    content: "\F107";
    position: absolute;
    right: 10px;
    top: 0;
    font-family: 'fontawesome';
    pointer-events: none;
    z-index: 1;
    margin: auto;
    bottom: 0;
    display: flex;
    align-items: center;
}

.textarea
    position: relative;
    width: 100%
    margin: 16px 0px 25px;
    textarea
        width: 100%


.btn-content-solid
