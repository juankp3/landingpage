/*
Available headings:
  .heading-1                 // 72px
  .heading-2                 // 48px
  .heading-3                 // 32px
  .heading-4                 // 28px
  .heading-5                 // 24px
  .heading-6                 // 20px
*/

[class*='heading-']
  font-family: $font-family-bold
  display: block
  font-weight: 400
  line-height: 1.5
  margin: 0

.heading-1
  font-size: 4.5rem

.heading-2
  font-size: 3rem

.heading-3
  font-size: 2rem
  +media-l()
    font-size: 1.5rem

.heading-4
  font-size: 1.75rem
  +media-m()
    font-size: 1.5rem

.heading-5
  font-size: 1.5rem
  +media-m()
    font-size: 1rem

.heading-6
  font-size: 1.25rem
  +media-m()
    font-size: 1rem

