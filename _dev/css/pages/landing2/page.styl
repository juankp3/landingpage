body 
    font-family: $font-family-lato-light
    color: $color-primary-blue
    strong
        font-family: $font-family-lato-bold
p
    line-height: 24px
h1
    color: $color-primary-blue
    font-family: $font-family-lato-regular
    font-size: 36px
    span
        color: $color-primary-orange
    +media-s()
        font-size: 26px
h2
    color: $color-primary-blue
    font-family: $font-family-lato-regular
    font-size: 32px
    span
        color: $color-primary-orange
    +media-s()
        font-size: 22px
h3 
    color: $color-primary-blue
    font-family: $font-family-lato-regular
    font-size: 18px
    span
        color: $color-primary-orange
h4 
    color: $color-primary-blue
    font-family: $font-family-lato-regular
    font-size: 14px
    span
        color: $color-primary-orange

.block-01
    padding: 0
    h2
        text-align: center
    h3
        text-align: center
    h4
        text-align: center
    p
        text-align: center
        padding: 0 4%

.p-block-01
    padding: 50px 0px
    +media-s()
        padding: 35px 0

section.sf-container
    display: flex
    background: $color-white
    &.p66
        padding: 66px 0px
    &.pt50
        padding: 0
        +media-m()
            padding: 48px 0px 0 0
    &.--gray
        background: $color-gray-servife-100   !important
    +media-s()
        flex-direction: column;
    .ft-image
        width: 100%
        display: none
        +media-m()
            display: block
    .block-image
        width: 100%
        display: block
        +media-m()
            display: none

.bg-gray
    background: $color-gray-servife-100

.content
    max-width: $extra-large
    width: $extra-large
    margin: auto
    
    &.--felx
        display: flex
        > div
            width: 50%
            +media-m()
                width: auto
        +media-m()
            display: block
    .sf-content-info
        pading: 0
        .box-info
            padding: 40px 100px 0 0
            +media-m()
                padding: 0
            &.--right
                padding: 40px 0px 0px 100px
            +media-m()
                padding: 0
            
    +media-xl()
        margin: auto 4%
        width: auto
    +media-m()
        margin: auto 4%
        width: auto
    +media-s()
        margin: 0 6%
        width: auto
    
.separatingline
    background: $color-primary-orange
    border-style: none
    height: 5px
    width: 50px
    &.mb24
        margin-bottom: 24px

.show-mobile
    display: none
    +media-m()
        display: flex
    +media-s()
        display: flex
.hide-mobile
    +media-m()
        display: none
    +media-s()
        display: none

.sf-container-ul 
    justify-content: flex-start
    flex-direction: row
    overflow-x: auto

ul.sf-content-item
    display: flex;
    li
        list-style: none
        padding: 20px

ul.sf-content-list
     margin-bottom: 24px;
    &.--right
        text-align: right 
    li
        list-style: none
        padding: 4px 0px
        p
            padding: 0px
            margin: 0px

.center
    text-align: center
