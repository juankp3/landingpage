section.sf-container-banner
    display: flex
    flex-direction: column
    & .sf-banner-block01
        padding-top: 30px
        & .block01-title h1
            text-align: left
            +media-s()
                text-align: center
            & span 
                color: $color-primary-orange
        & .block01-line
            padding: 10px 0
            display: flex
            flex-direction: row
            justify-content: left
            +media-s()
                justify-content: center
        & .block01-subtitle
            text-align: left
            +media-s()
                text-align: center

    & .sf-banner-block02
        background: yellow
    & .sf-banner-block03
        background: purple 
    & .sf-banner-block04
        background: lightblue  
    

    
