.sf-container-thanks
    background-image: url(../img/bg_header.png)
    background-repeat: no-repeat
    background-size: 100% 100%
    height: 530px

    display: flex
    flex-direction: column
    align-self: center
    +media-m()
        height : auto
        padding: 40px 0
    +media-s()
        height: auto
        padding: 20px 0
    div.sf-content-thanks
        text-align: center
        padding: 40px 50px
        background-image: url(../img/bg_thanks.png)
        +media-s()
            padding: 40px 0
        & .thanks-tit
            font-size: 48px
            color: $color-primary-light
            padding: 0
            margin: 0
            font-family: $font-family-ubuntu-medium
            +media-s()
                font-size: 35px
        & .thanks-desc 
            font-size: 20px
            color: $color-gray-500
            font-family: $font-family-ubuntu-regular
            padding: 0 0 20px 0
            +media-s()
                font-size: 20px
                padding: 0 13%
        & .thanks-subtit
            text-decoration: underline
            font-family: $font-family-ubuntu-bold
        & .thanks-whatsapp 
            margin: 4px 0 0 0
            & a i
                font-size: 24px
                color: $color-primary-light
                margin: 0 5px
                +media-s()
                    font-size: 20px
            & a span    
                font-size: 19px
                color: $color-blue
                font-family: $font-family-ubuntu-bold
                text-decoration: underline
        & .thanks-email
            color: $color-blue
            font-family: $font-family-ubuntu-bold
            & strong
                font-family: $font-family-ubuntu-regular
            +media-s()
                font-size: 20px
        & .thanks-btn
            width: 30%
            margin: 20px auto 0 auto 
            +media-m()
                width: 100%
            +media-s()
                width: 80%